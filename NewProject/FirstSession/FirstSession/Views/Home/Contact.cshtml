@model FirstSession.Models.Contact
@{
    ViewData["Title"] = "Contact";
}

<!-- contact section start -->
<div class="contact_section layout_padding">
    <div class="container-fluid">
        <h1 class="contact_taital">Contact Us</h1>
        <div class="contact_section_2">
            <div class="row">
                <form asp-action="Contact" method="post">
                    <div class="col-md-6">
                        <div class="image_7"><img sec="~/assets/images/img-7.png"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="mail_section_1">
                            <input asp-for="Name" type="text" class="mail_text" placeholder="Your Name">
                            <input asp-for="PhoneNumber" type="text" class="mail_text" placeholder="Phone Number">
                            <input asp-for="Email" type="text" class="mail_text" placeholder="Email">
                            <textarea asp-for="Massage" class="massage-bt" placeholder="Massage" rows="5" id="comment"></textarea>

                            <div class=""><button class="send_bt">SEND</button></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- contact section end -->